{
    "name": "mern-app",
    "version": "1.0.0",
    "description": "MERN stack boilerplate",
    "scripts": {
      "start": "concurrently \"cd server && npm start\" \"cd client && npm start\"",
      "server": "cd server && npm run dev",
      "client": "cd client && npm start",
      "dev": "concurrently \"npm run server\" \"npm run client\""
    },
    "dependencies": {
      "concurrently": "^8.2.2"
    }
  }